<?xml version="1.0" encoding="utf-8"?>
<familyset version="22">
    <!-- first font is default -->
    <family name="sans-serif">
        <font weight="100" style="normal">SourceSansPro-ExtraLight.ttf</font>
        <font weight="100" style="italic">SourceSansPro-ExtraLightIt.ttf</font>
        <font weight="300" style="normal">SourceSansPro-Light.ttf</font>
        <font weight="300" style="italic">SourceSansPro-LightIt.ttf</font>
        <font weight="400" style="normal">SourceSansPro-Regular.ttf</font>
        <font weight="400" style="italic">SourceSansPro-It.ttf</font>
        <font weight="500" style="normal">SourceSansPro-Semibold.ttf</font>
        <font weight="500" style="italic">SourceSansPro-SemiboldIt.ttf</font>
        <font weight="700" style="normal">SourceSansPro-Bold.ttf</font>
        <font weight="700" style="italic">SourceSansPro-BoldIt.ttf</font>
        <font weight="900" style="normal">SourceSansPro-Black.ttf</font>
        <font weight="900" style="italic">SourceSansPro-BlackIt.ttf</font>
    </family>

    <!-- Note that aliases must come after the fonts they reference. -->
    <alias name="sans-serif-thin" to="sans-serif" weight="100" />
    <alias name="sans-serif-light" to="sans-serif" weight="300" />
    <alias name="sans-serif-medium" to="sans-serif" weight="500" />
    <alias name="sans-serif-black" to="sans-serif" weight="900" />
    <alias name="arial" to="sans-serif" />
    <alias name="helvetica" to="sans-serif" />
    <alias name="tahoma" to="sans-serif" />
    <alias name="verdana" to="sans-serif" />

    <!-- No condesed style for Sans Pro yet
    <family name="sans-serif-condensed">
        <font weight="300" style="normal">SourceSansPro-Light.ttf</font>
        <font weight="300" style="italic">SourceSansPro-LightIt.ttf</font>
        <font weight="400" style="normal">SourceSansPro-Regular.ttf</font>
        <font weight="400" style="italic">SourceSansPro-Ita.ttf</font>
        <font weight="700" style="normal">SourceSansPro-Bold.ttf</font>
        <font weight="700" style="italic">SourceSansPro-BoldIt.ttf</font>
    </family>
    <alias name="sans-serif-condensed-light" to="sans-serif-condensed" weight="300" />
    -->

    <!-- No italics yet for Source Serif :( -->
    <family name="serif">
        <font weight="100" style="normal">SourceSerifPro-ExtraLight.ttf</font>
        <font weight="300" style="normal">SourceSerifPro-Light.ttf</font>
        <font weight="400" style="normal">SourceSerifPro-Regular.ttf</font>
        <font weight="500" style="normal">SourceSerifPro-Semibold.ttf</font>
        <font weight="700" style="normal">SourceSerifPro-Bold.ttf</font>
        <font weight="900" style="normal">SourceSerifPro-Black.ttf</font>
    </family>
    <alias name="times" to="serif" />
    <alias name="times new roman" to="serif" />
    <alias name="palatino" to="serif" />
    <alias name="georgia" to="serif" />
    <alias name="baskerville" to="serif" />
    <alias name="goudy" to="serif" />
    <alias name="fantasy" to="serif" />
    <alias name="ITC Stone Serif" to="serif" />

    <family name="monospace">
        <font weight="100" style="normal">SourceCodePro-ExtraLight.ttf</font>
        <font weight="100" style="italic">SourceCodePro-ExtraLightIt.ttf</font>
        <font weight="300" style="normal">SourceCodePro-Light.ttf</font>
        <font weight="300" style="italic">SourceCodePro-LightIt.ttf</font>
        <font weight="400" style="normal">SourceCodePro-Regular.ttf</font>
        <font weight="400" style="italic">SourceCodePro-It.ttf</font>
        <font weight="500" style="normal">SourceCodePro-Semibold.ttf</font>
        <font weight="500" style="italic">SourceCodePro-SemiboldIt.ttf</font>
        <font weight="700" style="normal">SourceCodePro-Bold.ttf</font>
        <font weight="700" style="italic">SourceCodePro-BoldIt.ttf</font>
        <font weight="900" style="normal">SourceCodePro-Black.ttf</font>
        <font weight="900" style="italic">SourceCodePro-BlackIt.ttf</font>
    </family>
    <alias name="sans-serif-monospace" to="monospace" />
    <alias name="monaco" to="monospace" />
</familyset>
